<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.BooksController">
   <children>
      <TextField fx:id="txtSearch" layoutX="32.0" layoutY="36.0" prefHeight="25.0" prefWidth="253.0" promptText="Enter Text to Search" />
      <Button fx:id="btnSearch" layoutX="300.0" layoutY="36.0" mnemonicParsing="false" onAction="#ButtonSearch" text="Search" />
      <TableView fx:id="table" layoutX="3.0" layoutY="82.0" prefHeight="432.0" prefWidth="700.0">
        <columns>
          <TableColumn fx:id="isbnColumn" prefWidth="68.0" text="ISBN" />
          <TableColumn fx:id="titleColumn" prefWidth="165.0" text="Title" />
            <TableColumn fx:id="authorColumn" prefWidth="98.0" text="Author" />
            <TableColumn fx:id="publisherColumn" prefWidth="68.0" text="Publisher" />
            <TableColumn fx:id="genreColumn" prefWidth="47.0" text="Genre" />
            <TableColumn fx:id="pagesColumn" prefWidth="42.0" text="Pages" />
            <TableColumn fx:id="dateColumn" prefWidth="92.0" text="Date Published" />
            <TableColumn fx:id="quantityColumn" prefWidth="51.0" text="Owned" />
            <TableColumn fx:id="availableColumn" prefWidth="62.0" text="Available" />
        </columns>
      </TableView>
      <Button layoutX="376.0" layoutY="539.0" mnemonicParsing="false" text="Remove Book" />
      <Button fx:id="btnNew" layoutX="582.0" layoutY="539.0" mnemonicParsing="false" onAction="#ButtonNew" text="New Book" />
      <Button fx:id="btnBack" layoutX="72.0" layoutY="539.0" mnemonicParsing="false" onAction="#ButtonBack" text="Back" />
      <Button fx:id="btnAdd" layoutX="492.0" layoutY="539.0" mnemonicParsing="false" onAction="#ButtonAdd" text="Add Book" />
   </children>
</AnchorPane>
